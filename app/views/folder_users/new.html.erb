<div class="row">
	<div class="col-sm-5">
		<h1>Adicionar usuario</h1>

		<%= form_tag("/folder_users", method: "post") do %>
		<div class="form-group">
		  <%= label_tag(:q, "E-mail do usuario:") %>
		  <%= email_field(:user,:email, class: "form-control") %>
		  <%= hidden_field_tag(:folder_id, @folder_id) %>
		  </div>
		  <div class="form-group">
		  <%= submit_tag("Adicionar", class: "btn btn-success") %>
		  </div>
		<% end %>

		<%= link_to 'Voltar', index_folder_user_path(@folder_id), class: "btn btn-default" %>
	</div>
</div>