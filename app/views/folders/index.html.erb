

<h1>Minhas pastas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @folders.each do |folder| %>
      <tr>
        <td><%= folder.name %></td>
        <td><%= folder.user.email %></td>
        <td> <%= link_to folder_path(folder), class: "btn btn-primary" do %>
             <i class="glyphicon glyphicon-file"></i> Artigos <% end %>
        </td>
        <td><%= link_to edit_folder_path(folder), class: "btn btn-warning" do %>
             <i class="glyphicon glyphicon-edit"></i> Editar <% end %>
        </td>
        <td><%= link_to folder, method: :delete , data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
             <i class="glyphicon glyphicon-remove"></i> Excluir <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @folders, renderer: BootstrapPagination::Rails %>
<br>

<%= link_to new_folder_path, class: "btn btn-success" do %>
<i class="glyphicon glyphicon-folder-open"></i> Nova pasta<% end %>
